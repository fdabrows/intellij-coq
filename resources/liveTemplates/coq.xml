<templateSet group="coq">
    <template name="lemma" value="Lemma $NAME$ : $VALUE$.&#10;Proof.&#10;Qed." description="Lemma Qeq" toReformat="true" toShortenFQNames="true">
        <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
        <variable name="VALUE" expression="" defaultValue="" alwaysStopAt="true" />
        <context>
            <option name="COQ_CODE" value="true" />
            <option name="OTHER" value="false" />
        </context>
    </template>
</templateSet>