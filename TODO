Communication toplevel

let do_vernac () =
  msgerrnl (mt ()); // nouvelle ligne
  if !print_emacs then msgerr (str (top_buffer.prompt()));
  resynch_buffer top_buffer;
  begin
    try
      raw_do_vernac top_buffer.tokens
    with any ->
      msgnl (print_toplevel_error (process_error any))
  end;
  flush_all()